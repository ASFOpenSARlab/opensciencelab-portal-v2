<head>
    <title>{{ title }}</title>
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <link rel="stylesheet" href="/static/css/style.min.css" type="text/css" />
    <link rel="icon" href="/static/img/favicon.ico" type="image/x-icon" />
    <script src="/static/js/require.js" type="text/javascript" charset="utf-8"></script>
    <script src="/static/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/static/js/bootstrap.min.js"
            type="text/javascript"
            charset="utf-8"></script>
    <style>
        .margin-left-50 {
            margin-left: 50px;
        }
        .margin-left-30 {
            margin-left: 30px;
        }
        .margin-left-10 {
            margin-left: 10px;
        }
        .margin-right-30 {
            margin-right: 30px;
        }
        .margin-top-10 {
            margin-top: 10px;
        }
        .horizontal-div {
            display: flex;
            gap: 1rem;
        }
        .vertical-div {
            display: flex;
            flex-direction: column;
        }
        .lab-display {
            margin-top: 10px;
        }
        .warning {
            font-weight: bold;
            color: rgb(255 0 0);
        }

        .fieldset-border-blue {
            padding: 40px;
            border: 1px solid #225f8d;
        }

        .fieldset-border-red {
            padding: 40px;
            border: 1px solid #bb0000;
        }

        .legend-border-text {
            width: auto;
            margin-bottom: 0px;
            border: 0px;
            padding: 10px;
        }

        .font-30 {
            font-size: 30px;
        }

        .font-20 {
            font-size: 20px;
        }

        .go-to-lab-btn {
            float: right;
            margin: 5px;
        }

        .go-to-about-btn {
            float: right;
            margin: 5px;
        }

        .lab-logo-img {
            max-height: 100px;
            max-width: 100%;
            padding: 10px;
        }

        .lab-description {
            padding: 20px;
        }

        .lab-btns {
            display: flex;
            justify-content: right;
        }

        .right-align {
            margin-left: auto;
        }

        .screen-width {
            width: 100vw;
        }

        .title {
            border-bottom: 1px solid black;
            margin-bottom: 25px;
            padding-bottom: 10px
        }

        .tr-highlight {
            background-color: rgb(161, 161, 255);
        }

        th {
            border: 1px solid black;
            padding: 5px;
        }

        .navbar-text {
            float: none;
        }

        .dropdown {
            position: relative;
            display: inline-block;
            vertical-align: middle;
        }

        .dropdown-toggle {
            cursor: pointer;
            user-select: none;
        }

        .dropdown-toggle::before {
            content: 'â€º';
            width: 1em;
            height: 1em;
            text-align: center;
            margin-left: 4px;
            display: inline-block;
            transition: transform 0.3s ease;
            transform-origin: center 85%;
        }

        .dropdown-toggle.active::before {
            transform: rotate(90deg);
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 200px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border: 1px solid #ddd;
            border-radius: 4px;
            z-index: 1000;
            margin-top: 5px;
        }

        .dropdown-menu.show {
            display: block;
        }

        .dropdown-menu a {
            color: #333;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            transition: background-color 0.2s;
        }

        .dropdown-menu a:hover {
            background-color: #f1f1f1;
        }

        /* Popup Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 2000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }

        .modal.show {
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
        }

        .modal-content {
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            max-width: 500px;
            width: 90%;
            box-shadow: 0 4px 16px rgba(0,0,0,0.2);
            position: relative;
        }

        .close-btn {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 28px;
            font-weight: bold;
            color: #aaa;
            cursor: pointer;
            line-height: 1;
        }

        .close-btn:hover {
            color: #000;
        }
        
        .note {
            border-left: 5px solid #2b6cb0;
            background-color: #ebf8ff;
            color: #2a4365;
            padding: 15px 20px;
            border-radius: 5px;
            font-family: system-ui, sans-serif;
            margin-left: 10px;
        }

        code {
            background-color: #f5f5f5;
            color: #333;
            padding: 0.2em 0.4em;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-family: "Courier New", Courier, monospace;
            font-size: 1em;
        }
    </style>
</head>
